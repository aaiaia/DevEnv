#!/bin/sh
echo '============================================================'
echo 'Initializing... on "'$SHELL'"'
#current_path=`pwd -P`
current_path=`pwd -P`
echo 'Current path is "'$current_path'"'

cd ~/DevEnv
echo 'Move to "~/DevEnv"'

echo 'ping test to "google.com"'
ping -c 1 -W 1 google.com
CMD_RESULT=$?

if [ $CMD_RESULT -eq 0 ]; then
    echo '=> done'
    git pull
    cd ~/
    echo 'Move to "~"'
    echo 'Updating environments'
    echo '=> done'
else
    cd ~/
    echo 'Move to "~"'
    echo '=> fail'
    echo 'Check internet connections'
fi

echo '============================================================'
echo ''
